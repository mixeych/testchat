doctype html
html
  head
    meta(charset='UTF-8')
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='js/jquery-2.2.3.min.js')
    script(src='js/main.js')

  body
    form#dologout(action="/logout", method="post", style="display:none")
    div.login
      -if(!user)
        a(href='/login') Sign In
        a(href='/register') Sign Up
      -else
        a#logout(href='#') Log out
    div.menu-main
      a(href='/') Main
      -if(user)
        a(href='/chat') Chat
    block content


